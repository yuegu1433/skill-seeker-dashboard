# Skill Management Center Environment Configuration

# Application
APP_NAME="Skill Management Center"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG="true"

# Server
HOST="0.0.0.0"
PORT="8000"

# Security
SECRET_KEY="your-super-secret-key-change-in-production-minimum-32-characters"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"

# CORS
ALLOWED_HOSTS="http://localhost:3000,http://localhost:8000"

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/skill_management"
DATABASE_POOL_SIZE="20"
DATABASE_MAX_OVERFLOW="30"
DATABASE_POOL_TIMEOUT="30"
DATABASE_POOL_RECYCLE="3600"

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS="100"
REDIS_SOCKET_TIMEOUT="5"

# Celery (for async tasks)
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"
CELERY_WORKER_CONCURRENCY="4"
CELERY_TASK_SOFT_TIME_LIMIT="300"
CELERY_TASK_TIME_LIMIT="600"

# File Storage
UPLOAD_DIR="/var/lib/skill-management/uploads"
MAX_FILE_SIZE="100MB"
ALLOWED_EXTENSIONS=".yaml,.yml,.json,.zip"

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_PER_MINUTE="100"
RATE_LIMIT_PER_HOUR="1000"

# Logging
LOG_LEVEL="INFO"
LOG_TO_FILE="false"
LOG_FORMAT="json"

# Monitoring
METRICS_ENABLED="true"
TRACING_ENABLED="true"
HEALTH_CHECK_INTERVAL="60"

# Skill Management
DEFAULT_SKILL_VERSION="1.0.0"
MAX_SKILL_VERSIONS="100"
SKILL_AUTO_SAVE_INTERVAL="30"
SKILL_MAX_CONTENT_SIZE="10485760"

# Analytics
ANALYTICS_RETENTION_DAYS="365"
ANALYTICS_BATCH_SIZE="1000"

# Import/Export
IMPORT_BATCH_SIZE="100"
EXPORT_BATCH_SIZE="100"
MAX_CONCURRENT_IMPORTS="5"
MAX_CONCURRENT_EXPORTS="5"
