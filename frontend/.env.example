# ==============================================================================
# Skill Seekers Frontend - Environment Configuration Template
# Copy this file to .env and modify the values according to your environment
# ==============================================================================

# ==============================================================================
# Application Configuration
# ==============================================================================

# Application version
VITE_APP_VERSION=1.0.0

# Node environment (development|production|staging)
NODE_ENV=production

# ==============================================================================
# API Configuration
# ==============================================================================

# Backend API URL (HTTP)
VITE_API_URL=http://localhost:8000

# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:8000

# Backend host (for nginx proxy)
API_HOST=backend:8000

# WebSocket host (for nginx proxy)
WS_HOST=backend:8000

# ==============================================================================
# Port Configuration
# ==============================================================================

# Frontend HTTP port
FRONTEND_PORT=3000

# Frontend development port
FRONTEND_DEV_PORT=3001

# Nginx HTTP port
NGINX_PORT=80

# Nginx HTTPS port
NGINX_SSL_PORT=443

# Prometheus monitoring port
PROMETHEUS_PORT=9090

# Grafana monitoring port
GRAFANA_PORT=3001

# Redis port
REDIS_PORT=6379

# MinIO port
MINIO_PORT=9000

# MinIO console port
MINIO_CONSOLE_PORT=9001

# Load balancer port
LOADBALANCER_PORT=8080

# ==============================================================================
# Nginx Configuration
# ==============================================================================

# Number of nginx worker processes (auto|number)
NGINX_WORKER_PROCESSES=auto

# Number of connections per worker
NGINX_WORKER_CONNECTIONS=1024

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# ==============================================================================
# Database Configuration (Optional)
# ==============================================================================

# PostgreSQL
POSTGRES_DB=skillseekers
POSTGRES_USER=user
POSTGRES_PASSWORD=changeme

# Database URL (alternative to individual settings)
DATABASE_URL=postgresql://user:changeme@db:5432/skillseekers

# Redis URL
REDIS_URL=redis://redis:6379

# ==============================================================================
# MinIO Configuration (Optional)
# ==============================================================================

# MinIO root user
MINIO_ROOT_USER=minioadmin

# MinIO root password
MINIO_ROOT_PASSWORD=minioadmin

# MinIO endpoint
MINIO_ENDPOINT=http://minio:9000

# ==============================================================================
# Monitoring Configuration (Optional)
# ==============================================================================

# Grafana admin user
GRAFANA_USER=admin

# Grafana admin password
GRAFANA_PASSWORD=admin

# ==============================================================================
# Backup Configuration
# ==============================================================================

# Backup retention in days
BACKUP_RETENTION=7

# ==============================================================================
# Security Configuration
# ==============================================================================

# SSL/TLS certificate paths (for production with SSL)
# Uncomment and modify these for HTTPS deployment
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Secret key for session encryption
# SECRET_KEY=your-secret-key-here

# ==============================================================================
# Performance Configuration
# ==============================================================================

# Max body size for uploads (in MB)
MAX_BODY_SIZE=10

# Connection timeout (in seconds)
CONNECTION_TIMEOUT=60

# Request timeout (in seconds)
REQUEST_TIMEOUT=60

# ==============================================================================
# Development Configuration
# ==============================================================================

# Enable hot module replacement
VITE_HMR=true

# Enable debug mode
VITE_DEBUG=false

# Custom API base path
VITE_API_BASE_PATH=/api

# ==============================================================================
# Deployment Configuration
# ==============================================================================

# Deployment environment
DEPLOY_ENV=production

# Docker registry URL (if using custom registry)
# DOCKER_REGISTRY=registry.example.com

# Image tag
IMAGE_TAG=latest

# ==============================================================================
# Logging Configuration
# ==============================================================================

# Log level (error|warn|info|debug)
LOG_LEVEL=info

# Enable access logging
ENABLE_ACCESS_LOG=true

# Enable error logging
ENABLE_ERROR_LOG=true

# ==============================================================================
# Health Check Configuration
# ==============================================================================

# Health check path
HEALTH_CHECK_PATH=/health

# Readiness probe path
READINESS_PATH=/ready

# Liveness probe path
LIVENESS_PATH=/health

# ==============================================================================
# Rate Limiting Configuration
# ==============================================================================

# API rate limit (requests per minute)
API_RATE_LIMIT=100

# Login rate limit (requests per minute)
LOGIN_RATE_LIMIT=10

# ==============================================================================
# Cache Configuration
# ==============================================================================

# Static asset cache duration (in seconds)
STATIC_CACHE_DURATION=31536000

# HTML cache duration (in seconds)
HTML_CACHE_DURATION=3600

# API response cache duration (in seconds)
API_CACHE_DURATION=300

# ==============================================================================
# CORS Configuration
# ==============================================================================

# Allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=*

# Allowed methods
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers
CORS_ALLOWED_HEADERS=DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization

# ==============================================================================
# Content Security Policy
# ==============================================================================

# Enable CSP
CSP_ENABLED=true

# CSP directives (semicolon-separated)
CSP_DIRECTIVES=default-src 'self' http: https: data: blob: 'unsafe-inline'

# ==============================================================================
# Feature Flags
# ==============================================================================

# Enable analytics
ENABLE_ANALYTICS=false

# Enable error reporting
ENABLE_ERROR_REPORTING=false

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable maintenance mode
MAINTENANCE_MODE=false

# ==============================================================================
# External Services
# ==============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=

# Google Analytics ID
# GA_TRACKING_ID=

# S3 bucket for static assets
# S3_BUCKET=

# CloudFlare API token
# CLOUDFLARE_API_TOKEN=

# ==============================================================================
# Notes:
# ==============================================================================
#
# 1. Copy this file to .env: cp .env.example .env
# 2. Modify the values according to your environment
# 3. Never commit .env file to version control
# 4. Use environment-specific .env files for different environments
# 5. Sensitive information like passwords should be stored securely
#
# ==============================================================================
